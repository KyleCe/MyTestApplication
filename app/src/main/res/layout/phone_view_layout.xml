<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phone_frame_parent"
    android:layout_width="230dp"
    android:layout_height="444dp"
    android:layout_gravity="center"
    android:background="@drawable/phone_transparent"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="9.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="81">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>

        <FrameLayout
            android:id="@+id/phone_frame_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="94.8"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            tools:background="@color/guide_view_5_general">

        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="9"/>

</LinearLayout>

